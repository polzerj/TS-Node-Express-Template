{
    "name": "zelia-api",
    "version": "1.0.0",
    "description": "Rest-API for Zelia",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon --watch '*.ts' --exec 'ts-node -r tsconfig-paths/register -r dotenv/config' src/server.ts",
        "start": "node dist/server.js",
        "build": "npm i && tsc -p . && tscpaths --project tsconfig.json -s src/ -o dist",
        "clean": "rm -r node_modules && rm -r dist"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^16.4.5",
        "dotenv": "^10.0.0",
        "nodemon": "^2.0.12",
        "ts-node": "^10.1.0",
        "tsconfig-paths": "^3.10.1",
        "tscpaths": "^0.0.9",
        "typescript": "^4.3.5"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "express": "^4.17.1"
    }
}
